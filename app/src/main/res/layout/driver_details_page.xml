<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/appColor"
    android:gravity="top"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".view.GetStartedPage">

    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
        android:id="@+id/loader"
        style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTint="@color/red"
        android:visibility="invisible"
        app:mpb_progressStyle="horizontal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backtap"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/baseline_arrow_back_24">

        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:fontFamily="@font/regular"
            android:gravity="start"
            android:text="@string/step_1_of_3"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:theme="@style/loginPageSubHeadingTextTheme" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:gravity="center"
            android:orientation="vertical">
            <!--text view for heading-->
            <!--text view for sub heading-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:gravity="start"
                android:text="@string/enter_driver_details_to_drive_with_church_ride"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:theme="@style/loginPageSubHeadingTextTheme" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_picture"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_margin="10dp"
                            android:src="@drawable/baseline_supervised_user_circle_24"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/edit_profile_picture_button"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginBottom="4dp"
                            android:background="@drawable/bg_circle"
                            android:padding="8dp"
                            android:src="@drawable/baseline_mode_edit_24"
                            app:layout_constraintBottom_toBottomOf="@id/profile_picture"
                            app:layout_constraintEnd_toEndOf="@id/profile_picture"
                            app:tint="@color/white" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:layout_marginTop="22dp"
                        android:background="@drawable/custom_edit_text_cut"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        android:weightSum="1">

                        <EditText
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10sp"
                            android:layout_marginEnd="20sp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/bold"
                            android:hint="@string/enter_name"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLength="30"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="@color/black"
                            android:textSize="17sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/custom_edit_text_cut"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/dob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10sp"
                            android:layout_marginEnd="20sp"
                            android:layout_weight="1"
                            android:fontFamily="@font/bold"
                            android:hint="@string/date_of_birth"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="@color/black"
                            android:textSize="17sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/custom_edit_text_cut"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        android:weightSum="1">

                        <EditText
                            android:id="@+id/email_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10sp"
                            android:layout_marginEnd="20sp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/bold"
                            android:hint="@string/email_address"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:maxLength="90"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="@color/black"
                            android:textSize="17sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/custom_edit_text_cut"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        android:weightSum="1">

                        <EditText
                            android:id="@+id/address"
                            android:layout_width="match_parent"
                            android:layout_height="90sp"
                            android:layout_marginStart="10sp"
                            android:layout_marginEnd="20sp"
                            android:background="@null"
                            android:fontFamily="@font/bold"
                            android:gravity="top|left"
                            android:hint="@string/enter_address"
                            android:imeOptions="actionNext"
                            android:inputType="textMultiLine"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="17sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/custom_edit_text_cut"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        android:weightSum="1">

                        <EditText
                            android:id="@+id/city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10sp"
                            android:layout_marginEnd="20sp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/bold"
                            android:hint="@string/enter_city"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLength="90"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="@color/black"
                            android:textSize="17sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/custom_edit_text_cut"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/choosechruch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginStart="10sp"
                            android:layout_marginEnd="20sp"
                            android:layout_weight="1"
                            android:fontFamily="@font/bold"
                            android:gravity="center|start"
                            android:hint="@string/choose_church_for_pickup_drop"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="@color/black"
                            android:textSize="17sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/custom_edit_text_cut"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        android:weightSum="1">

                        <EditText
                            android:id="@+id/zipcode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10sp"
                            android:layout_marginEnd="20sp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/bold"
                            android:hint="@string/enter_zipcode"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:maxLength="10"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="@color/black"
                            android:textSize="17sp" />
                    </LinearLayout>

                    <com.apachat.loadingbutton.core.customViews.CircularProgressButton
                        android:id="@+id/drivernext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="20sp"
                        android:layout_marginBottom="10sp"
                        android:background="@drawable/buttonback"
                        android:fontFamily="@font/regular"
                        android:gravity="center"
                        android:padding="10sp"
                        android:text="@string/next"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold">

                    </com.apachat.loadingbutton.core.customViews.CircularProgressButton>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>