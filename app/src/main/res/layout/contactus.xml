<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/appColor"
    android:gravity="top"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".view.GetStartedPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:gravity="center"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/heading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/monomedium"
                        android:padding="10dp"
                        android:text="@string/contact_us"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:background="@color/lightgrey"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/appColor"
                        android:gravity="center|start"
                        android:orientation="horizontal"
                        android:padding="10sp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_contact_phone_24"
                            android:tint="@color/grey">

                        </ImageView>

                        <TextView
                            android:id="@+id/phonenumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10sp"
                            android:fontFamily="@font/monomedium"
                            android:gravity="start"
                            android:text="+000000000"
                            android:textColor="@color/darkgrey"
                            android:textSize="17sp"
                            android:theme="@style/loginPageSubHeadingTextTheme" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/appColor"
                        android:gravity="center|start"
                        android:orientation="horizontal"
                        android:padding="10sp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_mail_24"
                            android:tint="@color/grey">

                        </ImageView>

                        <TextView
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10sp"
                            android:fontFamily="@font/monomedium"
                            android:gravity="start"
                            android:text="Testemail@gmail.com"
                            android:textColor="@color/darkgrey"
                            android:textSize="17sp"
                            android:theme="@style/loginPageSubHeadingTextTheme" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/appColor"
                        android:gravity="top|start"
                        android:orientation="horizontal"
                        android:padding="10sp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_location_on_24"
                            android:tint="@color/grey">

                        </ImageView>

                        <TextView
                            android:id="@+id/address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10sp"
                            android:fontFamily="@font/monomedium"
                            android:gravity="start"
                            android:text="Filler text is text that shares some characteristics of a real written text, but is random or otherwise generated. It may be used to display a sample of fonts, generate text for testing, or to spoof an e-mail spam filter."
                            android:textColor="@color/darkgrey"
                            android:textSize="17sp"
                            android:theme="@style/loginPageSubHeadingTextTheme" />

                    </LinearLayout>

                    <com.apachat.loadingbutton.core.customViews.CircularProgressButton
                        android:id="@+id/closebutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="5sp"
                        android:background="@drawable/buttonback"
                        android:fontFamily="@font/regular"
                        android:gravity="center"
                        android:padding="10sp"
                        android:text="@string/close"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold">

                    </com.apachat.loadingbutton.core.customViews.CircularProgressButton>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>