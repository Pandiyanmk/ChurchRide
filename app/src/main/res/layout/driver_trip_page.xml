<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/appColor"
    android:gravity="top"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/menulay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:gravity="top"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="15sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="15sp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/amountrect"
                    android:padding="15sp"
                    android:visibility="invisible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/monomedium"
                        android:gravity="center"
                        android:text="$"
                        android:textAllCaps="true"
                        android:textColor="@color/teal_700"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:theme="@style/loginPageSubHeadingTextTheme" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/monomedium"
                        android:gravity="center"
                        android:text="135.48"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:theme="@style/loginPageSubHeadingTextTheme" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:gravity="bottom|center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="top"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="15sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="15sp"
                android:gravity="end"
                android:orientation="horizontal"
                android:weightSum="1">


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="20sp"
                    android:background="@drawable/driverhomepagemenus">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/mylocation"
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:backgroundTint="@color/black"
                        android:src="@android:color/transparent"
                        app:fabSize="normal"
                        app:rippleColor="@color/white" />

                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_gravity="center"
                        android:elevation="16dp"
                        android:src="@drawable/baseline_my_location_24"
                        android:tint="@color/white" />
                </FrameLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:elevation="20dp"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="1">

                <me.zhanghai.android.materialprogressbar.MaterialProgressBar
                    android:id="@+id/loader"
                    style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="5sp"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/black"
                    android:visibility="gone"
                    app:mpb_progressStyle="horizontal" />


                <LinearLayout
                    android:id="@+id/locationoff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="15sp"
                    android:layout_marginBottom="10sp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/monomedium"
                            android:gravity="center|start"
                            android:text="@string/turn_location_on_on_settings_page"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:theme="@style/loginPageSubHeadingTextTheme" />

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/driverhomepagemenus">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/gosettings"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:backgroundTint="@color/black"
                            android:src="@android:color/transparent"
                            app:fabSize="normal"
                            app:rippleColor="@color/white" />

                        <ImageView
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:layout_gravity="center"
                            android:elevation="16dp"
                            android:src="@drawable/arrow_right_24"
                            android:tint="@color/white" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/backgroundLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:background="@color/liblack">

                    </View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="20sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="15sp"
                        android:layout_marginBottom="10sp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/monomedium"
                                android:gravity="center|start"
                                android:text="@string/background_location_permission_needed_tap_allow_all_time_in_the_next_screen"
                                android:textAllCaps="true"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:theme="@style/loginPageSubHeadingTextTheme" />

                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/driverhomepagemenus">

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/backpermissionclick"
                                android:layout_width="40sp"
                                android:layout_height="40sp"
                                android:backgroundTint="@color/black"
                                android:src="@android:color/transparent"
                                app:fabSize="normal"
                                app:rippleColor="@color/white" />

                            <ImageView
                                android:layout_width="20sp"
                                android:layout_height="20sp"
                                android:layout_gravity="center"
                                android:elevation="16dp"
                                android:src="@drawable/arrow_right_24"
                                android:tint="@color/white" />
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/alertlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:background="@color/liblack">

                    </View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="20sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="15sp"
                        android:layout_marginBottom="10sp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/monomedium"
                                android:gravity="center|start"
                                android:text="@string/allow_overlay_permission_for_displaying_ride_request"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:theme="@style/loginPageSubHeadingTextTheme" />

                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/driverhomepagemenus">

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/gotooverlay"
                                android:layout_width="40sp"
                                android:layout_height="40sp"
                                android:backgroundTint="@color/black"
                                android:src="@android:color/transparent"
                                app:fabSize="normal"
                                app:rippleColor="@color/white" />

                            <ImageView
                                android:layout_width="20sp"
                                android:layout_height="20sp"
                                android:layout_gravity="center"
                                android:elevation="16dp"
                                android:src="@drawable/arrow_right_24"
                                android:tint="@color/white" />
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:background="@drawable/ridepage_back"
        android:gravity="center">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rideData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="10sp"
            tools:itemCount="2"
            tools:listitem="@layout/ride_item">

        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>
</RelativeLayout>