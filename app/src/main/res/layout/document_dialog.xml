<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/monomedium"
                android:padding="10dp"
                android:text="Heading"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:visibility="visible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/lightgrey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/reuploadlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="90sp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/reupload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/darkgrey"
                        android:src="@drawable/baseline_drive_folder_upload_24"
                        android:tint="@color/darkgrey"
                        app:fabSize="normal"
                        app:rippleColor="@color/lightgrey"
                        app:tint="@color/white" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:fontFamily="@font/monomedium"
                        android:text="@string/reupload"
                        android:textAllCaps="true"
                        android:textColor="@color/darkgrey"
                        android:textSize="13sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/viewlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/viewupload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/darkgrey"
                        android:src="@drawable/baseline_image_24"
                        android:tint="@color/darkgrey"
                        app:fabSize="normal"
                        app:rippleColor="@color/lightgrey"
                        app:tint="@color/white" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:fontFamily="@font/monomedium"
                        android:text="@string/view"
                        android:textAllCaps="true"
                        android:textColor="@color/darkgrey"
                        android:textSize="13sp" />


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <com.apachat.loadingbutton.core.customViews.CircularProgressButton
            android:id="@+id/close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10sp"
            android:background="@drawable/buttonback"
            android:fontFamily="@font/regular"
            android:gravity="center"
            android:padding="10sp"
            android:text="@string/close"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold">

        </com.apachat.loadingbutton.core.customViews.CircularProgressButton>

    </LinearLayout>

</LinearLayout>
