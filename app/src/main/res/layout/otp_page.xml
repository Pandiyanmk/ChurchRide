<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/appColor"
    android:gravity="top"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".view.GetStartedPage">

    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
        android:id="@+id/loader"
        style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTint="@color/red"
        android:visibility="invisible"
        app:mpb_progressStyle="horizontal" />

    <ImageView
        android:id="@+id/backtap"
        android:layout_margin="10sp"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_width="30sp"
        android:layout_height="30sp">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:gravity="center"
            android:orientation="vertical">
            <!--text view for heading-->
            <!--text view for sub heading-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:gravity="center"
                android:text="@string/enter_the_6_digit_code"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:textStyle="bold"
                android:theme="@style/loginPageSubHeadingTextTheme" />

            <TextView
                android:id="@+id/codesent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5sp"
                android:layout_marginTop="20sp"
                android:fontFamily="@font/regular"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <in.aabhasjindal.otptextview.OtpTextView
                android:id="@+id/otp_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/regular"
                android:textColor="@color/black"
                app:bar_enabled="true"
                app:bar_height="2dp"
                app:height="40dp"
                app:length="6"
                app:otp_box_background="@color/colorAccent"
                app:otp_text_size="24dp"
                app:text_typeface="@font/regular"
                app:width="40dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:fontFamily="@font/regular"
                android:gravity="center"
                android:text="@string/resend_code"
                android:textColor="@color/grey"
                android:textSize="20sp"
                android:theme="@style/loginPageSubHeadingTextTheme" />

            <TextView
                android:id="@+id/resendotp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/regular"
                android:gravity="center"
                android:text="@string/resendotp"
                android:textAllCaps="true"
                android:textColor="@color/green"
                android:textSize="17sp"
                android:theme="@style/loginPageSubHeadingTextTheme" />


            <com.apachat.loadingbutton.core.customViews.CircularProgressButton
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20sp"
                android:background="@drawable/buttonback"
                android:fontFamily="@font/regular"
                android:gravity="center"
                android:padding="10sp"
                android:text="@string/next"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold">

            </com.apachat.loadingbutton.core.customViews.CircularProgressButton>


        </LinearLayout>
    </LinearLayout>


</LinearLayout>