<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10sp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:orientation="vertical">

        <LinearLayout
            android:weightSum="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/documentName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/monomedium"
                    android:gravity="start"
                    android:text="@string/upload_all_below_mentioned_documents"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:theme="@style/loginPageSubHeadingTextTheme" />

                <TextView
                    android:id="@+id/note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/monomedium"
                    android:gravity="start"
                    android:visibility="gone"
                    android:textColor="@color/grey"
                    android:textSize="15sp"
                    android:theme="@style/loginPageSubHeadingTextTheme" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/overlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edittextclickable"
                android:orientation="horizontal">



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5sp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/monomedium"
                        android:gravity="start"
                        android:padding="10sp"
                        android:text="@string/no_image_choosen"
                        android:textColor="@color/grey"
                        android:textSize="13sp"
                        android:theme="@style/loginPageSubHeadingTextTheme" />

                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/arrow"
                android:layout_marginEnd="10sp"
                android:src="@drawable/baseline_keyboard_arrow_right_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ImageView>
        </LinearLayout>



        <LinearLayout
            android:visibility="gone"
            android:id="@+id/overlays"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5sp"
            android:background="@drawable/edittextclickable"
            android:orientation="horizontal">

            <Button
                android:id="@+id/chooseimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:fontFamily="@font/monomedium"
                android:text="@string/choose_image">

            </Button>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5sp"
                android:gravity="center">

                <TextView
                    android:id="@+id/filechoosen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/monomedium"
                    android:gravity="start"
                    android:text="@string/no_image_choosen"
                    android:textColor="@color/grey"
                    android:textSize="17sp"
                    android:theme="@style/loginPageSubHeadingTextTheme" />

                <ImageView
                    android:id="@+id/tickImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2sp"
                    android:src="@drawable/baseline_done_24"
                    android:visibility="gone">

                </ImageView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
<View
    android:id="@+id/lines"
    android:layout_marginTop="10sp"
    android:background="@color/appColor"
    android:layout_width="match_parent"
    android:layout_height="1sp">

</View>
</LinearLayout>
